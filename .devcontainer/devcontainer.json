{
  "name": "Laravel 12 + Filament",
  "image": "mcr.microsoft.com/devcontainers/php:8.3",
  "features": {
    "ghcr.io/devcontainers/features/composer:2": {},
    "ghcr.io/devcontainers/features/node:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        "editorconfig.editorconfig"
      ]
    }
  },
  "postCreateCommand": "composer install && cp .env.example .env && php artisan key:generate",
  "portsAttributes": {
    "8000": {
      "label": "Laravel App"
    }
  },
  "forwardPorts": [8000]
}
